# OpenWebUI bridge config
PORT=3001
OPENWEBUI_BASE_URL=http://localhost:8080

# Optional: if OpenWebUI requires API key/Bearer token
OPENWEBUI_API_KEY=

# Fallback/default model exposed to current frontend
DEFAULT_MODEL=gpt-4o-mini

# TTS fallback defaults
DEFAULT_TTS_MODEL=gpt-4o-mini-tts
DEFAULT_TTS_VOICE=alloy

# Request limits
REQUEST_TIMEOUT_MS=120000
MAX_UPLOAD_SIZE=52428800

# Conversation memory in bridge
MAX_HISTORY_TURNS=20
SYSTEM_PROMPT=你是一个专业、可靠、简洁的AI助手。
